body
  font-size 36px
  text-align center
  padding 0
  margin 0

  &:before
    content ''
    display block
    width 100%
    height 10000px
    background url("../favicon.png")
    opacity 0.05
    position absolute
    top 1

article
  position relative
  z-index 10

button
  font-size 36px
  padding 10px
  cursor pointer

#paper
  position fixed
  z-index 0
  top 0
  left 0
  width 100%
  height 100%
  background rgba(0,0,0,0)